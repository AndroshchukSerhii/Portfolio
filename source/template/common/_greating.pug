			li.icon__wrap-item.icon__wrap-blue
				a(href="#")
					+icon('github') 
			li.icon__wrap-item.icon__wrap-blue
				a(href="#")
					+icon('in')  
	
	ul.welcome__navigation
		li
			a(href="")  Мои работы
		li
			a(href="/about.html")  Обо мне
		li
			a(href="#") Блог
