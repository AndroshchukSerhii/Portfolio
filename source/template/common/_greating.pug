	.welcome__img_wrap
		img(src="/assets/img/avatar.jpg", class="welcome__img_avatar")
	.welcome__text_name 
		h2 #{name}
		p  Личный сайт веб разработчика
	.welcome_link
		ul.icon__wrap-link
			li.icon__wrap-item.icon__wrap-blue
				a(href="#")
